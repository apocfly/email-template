  <table width="100%" border="0" cellspacing="0" cellpadding="0">
    <tr><td align="center" style="padding:40px 0;">

      <table width="700" style="background:#fff; border-radius:20px; box-shadow:0 4px 16px rgba(0,0,0,0.08); overflow:hidden;">

        <tr>
          <td align="center" style="background:linear-gradient(135deg,#06C755,#00A64E); color:#fff; padding:30px; font-size:26px; font-weight:700;">
